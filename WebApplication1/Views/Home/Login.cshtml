@{
    ViewBag.Title = "Login";
}



    <div class="container" style="margin-top:150px; width: 500px;">
        <form action="AddUserToDatabase" method="POST" class="p-4" style="background-color: #ffffff; box-shadow: 5px 10px 20px 20px #DCDCDC; height: 500px; padding-left:95px; padding-top:100px; font-size:15px; border-radius:20px;">
            <div class="form-group">
                <label for="fullName" class="text-info">Full name:</label>
                <input type="text" class="form-control" id="fullName" aria-describedby="fullNameHelp" name="name">                                                                          
            </div>

            <div class="form-group">
                <label for="email" class="text-success">Email:</label>
                <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email">
            </div>

            <div class="form-group">
                <label for="password" class="text-warning">Password</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <br />
            <button type="submit" class="btn btn-primary" style="width:280px;">Submit</button>
        </form>
    </div>
</div>