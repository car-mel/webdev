
@{
    ViewBag.Title = "UserUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userList = (IEnumerable<user>)ViewData["userList"];
}

<br /><br />
@{
    foreach (var user in userList)
    {
       
        <form action="Update" method="POST" class="p-4" style="margin-left: 300px;margin-top:150px; width: 500px; background-color: #ffffff; box-shadow: 5px 10px 20px 20px #DCDCDC; height: 500px; padding-left:110px; padding-top:100px; font-size:17px; border-radius:20px;">
            <div class="form-group">
                <input type="hidden" name="id" value="@user.user_id" />
                <label for="exampleInputEmail1" class="text-info">Full name:</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="new_name" value="@user.name">

            </div>

            <div class="form-group">
                <label for="exampleInputEmail1" class="text-success">Email:</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="new_email" value="@user.email">

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="text-warning">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="new_password" value="@user.password" />
            </div>
            <button type="submit" class="btn btn-primary" style="width:280px;">Update</button>
        </form>
    }
}